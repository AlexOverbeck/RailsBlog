<div class="row">
    <div class="col m4 offset-m4 l4 offset-l4 s6 offset-s3">
        <h4>User Directory</h4>
    </div>
</div>
<div class="row">
    <% @users.each do |user| %>
        <div class="col s12 m3 l3">
            <div class="card">
                <div class="card-content">
                    <span class="card-title"><%= user.username %></span>
                    <div>
                        <%= gravatar_for(user) %>
                    </div>
                </div>
                <div class="card-action">
                    <a><%= link_to 'Profile', user_path(user) %></a>
                </div>
            </div>
        </div>
    <% end %>
</div>
