<!DOCTYPE html>
<html>
    <head>
        <title>ShMedium</title>
        <%= csrf_meta_tags %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </head>
    <body>
        <nav class="green accent-3">
            <div class="nav-wrapper">
                <a href="#" class="brand-logo">ShMedium</a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a href="/">Home</a></li>
                    <li><%= link_to "Articles", articles_path %></li>
                    <li><%= link_to "Create", new_article_path %></li>
                    <li><a href="/signup">Sign Up</a></li>
                    <li><%= link_to "Logout", logout_path, method: :delete %></li>
                </ul>
            </div>
        </nav>
        <%= flash_messages %>
        <%= react_component('HelloWorld', name: 'Alex') %>
        <%= yield %>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js" data-turbolinks-eval=false></script>
    </body>
</html>
